    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="icon" href="/Pictures/Logo.jpg" type="image/jpeg" sizes="32x32">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <img src="/Pictures/Logo.jpg" alt="Farsite Electronics Logo" class="logo-img">
                <h2>Farsite Electronics.</h2>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="/#home" class="nav-link">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/#products" class="nav-link">Products</a>
                </li>
                <li class="nav-item">
                    <a href="/reviews" class="nav-link">Reviews</a>
                </li>
                <li class="nav-item">
                    <a href="/contact" class="nav-link">Contact Us</a>
                </li>
            </ul>
            <div class="hamburger">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="hero">
        <img class="hero-video" src="/Pictures/hero-section.jpg" alt="Hero background" style="width:100%; height:70vh; object-fit:cover; image-rendering:auto;" loading="eager" decoding="async" />
        <div class="hero-content">
            <h1 class="hero-title">Your Trusted Apple Electronics Shop in Malawi</h1>
            <p class="hero-subtitle">Free Delivery & Phone Swap Deals Available</p>
            <button class="cta-button">Shop Now</button>
        </div>
        <div class="hero-overlay"></div>
    </section>

    <!-- Products Section -->
    <section id="products" class="products">
        <div class="container">
            <h2 class="section-title">Our Products</h2>
            <div class="products-grid" id="productsGrid">
                <!-- Products will be dynamically generated from product-data.js -->
            </div>
        </div>
    </section>

    <!-- Phone Swap Section -->
    <section class="phone-swap">
        <video class="swap-video" autoplay muted loop playsinline webkit-playsinline preload="auto" poster="/Pictures/Swap deals.jpg">
            <source src="/New folder/3096293491024012.mp4" type="video/mp4">
        </video>
        <div class="container">
            <div class="swap-banner">
                <div class="swap-image">
                    <img src="/Pictures/Swap deals.jpg" alt="Phone Swap Deals" class="swap-img">
                </div>
                <h2>üì± Phone Swap Deals</h2>
                <p>Trade in your old iPhone + cash to upgrade to the latest model</p>
                <div class="swap-features">
                    <div class="swap-feature">
                        <span class="feature-icon">üí∞</span>
                        <span>Get instant value for your old phone</span>
                    </div>
                    <div class="swap-feature">
                        <span class="feature-icon">üîÑ</span>
                        <span>Easy upgrade process</span>
                    </div>
                    <div class="swap-feature">
                        <span class="feature-icon">‚úÖ</span>
                        <span>All models accepted</span>
                    </div>
                </div>
                <button class="swap-btn">Get Quote</button>
            </div>
        </div>
    </section>

    <!-- Free Delivery Section -->
    <section class="delivery">
        <div class="container">
            <div class="delivery-banner">
                <div class="delivery-image">
                    <img src="/Pictures/Deliveries/kwezy.jpg" alt="Free Delivery Service" class="delivery-img">
                </div>
                <h2>üöö Free Delivery</h2>
                <p>We deliver free of charge anywhere in Blantyre town</p>
                <div class="delivery-info">
                    <div class="delivery-item">
                        <span class="delivery-icon">üìç</span>
                        <span>Blantyre Town & Surrounding Areas</span>
                    </div>
                    <div class="delivery-item">
                        <span class="delivery-icon">‚è∞</span>
                        <span>Same Day Delivery Around Blantyre Available</span>
                    </div>
                    <div class="delivery-item">
                        <span class="delivery-icon">üõ°Ô∏è</span>
                        <span>Secure & Insured Delivery</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Happy Customers Section -->
    <section class="happy-customers">
        <div class="container">
            <h2 class="section-title">Happy Customers</h2>
            <p class="section-subtitle">See what our satisfied customers are saying about their experience</p>
            <div class="customers-grid" id="customersGrid"></div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Farsite Electronics</h3>
                    <p>Professional Providers of best and affordable electronic gadgets in Malawi and Worldwide</p>
                </div>
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a href="/#home">Home</a></li>
                        <li><a href="/#products">Products</a></li>
                        <li><a href="/reviews">Reviews</a></li>
                        <li><a href="/contact">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Contact Info</h4>
                    <p>üìû +265 880 950 026</p>
                    <p>üìß farsiteelectronics@gmail.com</p>
                    <p>üìç Blantyre, Malawi</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 Farsite Electronics. All rights reserved.</p>
            </div>
        </div>
    </footer>
    
    <!-- Product Details Modal -->
    <div id="productModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div class="modal-body">
                <div class="product-image-modal">
                    <img id="modalProductImage" src="" alt="" class="modal-img">
                </div>
                <div class="product-details">
                    <h2 id="modalProductName"></h2>
                    <p class="modal-price" id="modalProductPrice"></p>
                    
                    <div class="details-section">
                        <h3>Product Details</h3>
                        <div class="detail-item">
                            <span class="detail-label">Availability:</span>
                            <span class="detail-value" id="modalAvailability"></span>
                        </div>
                        <div class="detail-item" id="generationItem" style="display: none;">
                            <span class="detail-label">Generation:</span>
                            <span class="detail-value" id="modalGeneration"></span>
                        </div>
                        <div class="detail-item" id="batteryHealthItem" style="display: none;">
                            <span class="detail-label">Battery Health:</span>
                            <span class="detail-value" id="modalBatteryHealth"></span>
                        </div>
                        <div class="detail-item" id="faceIdItem" style="display: none;">
                            <span class="detail-label">Face ID:</span>
                            <span class="detail-value" id="modalFaceId"></span>
                        </div>
                        <div class="detail-item" id="trueToneItem" style="display: none;">
                            <span class="detail-label">True Tone:</span>
                            <span class="detail-value" id="modalTrueTone"></span>
                        </div>
                        <div class="detail-item" id="batteryReplacedItem" style="display: none;">
                            <span class="detail-label">Battery Replaced:</span>
                            <span class="detail-value" id="modalBatteryReplaced"></span>
                        </div>
                        <div class="detail-item" id="conditionItem" style="display: none;">
                            <span class="detail-label">Condition:</span>
                            <span class="detail-value" id="modalCondition"></span>
                        </div>
                    </div>
                    
                    <div class="modal-actions">
                        <button class="modal-btn primary">Contact Us</button>
                        <button class="modal-btn secondary">Get Quote</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/hero-video.js"></script>
    <script src="/product-data.js"></script>
    <script src="/script.js"></script>
</body>
</html>
